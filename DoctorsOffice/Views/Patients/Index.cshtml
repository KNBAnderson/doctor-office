@using DoctorsOffice.Models;
<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>Doctor's Office</title>
  <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
  <link rel='stylesheet' href='~/css/styles.css' type="text/css">
</head>
<body>
  <div class="container">
    <div class="jumbotron">
      <h1>Doctor's Office</h1>
    </div>
    <ul>
    @if (Model.Count == 0)
    {
      <p>You have no patients.</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (Patient patient in Model)
      {
        <li><a href="/patients/@patient.GetId()" class="btn btn-dark">@patient.GetName()</a></li>
      }
    }
    </ul>
    <div id="space">
    </div>
    <hr>
    <a href="/patients/new" class="btn btn-dark">Add a new patient</a>
    <a href="/" class="btn btn-dark">Home</a>
  </div>
</body>
</html>
